@model Models.EF.SetTiemChung

@{
    ViewBag.Title = "Lưu set tiêm chủng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save"></i>&nbsp;Lưu set tiêm chủng
}

@using (Html.BeginForm("Create", "SetTiemChung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="form-group">
                <label class="control-label col-md-2">Tên set tiêm chủng:</label>
                <div class="col-md-10">
                    @if (ViewBag.Update != true)
                    {
                        @Html.TextBoxFor(model => model.id, new { @class = "form-control hide" });
                        @Html.TextBoxFor(model => model.id_loaiTiemChung, new { @class = "form-control hide" });
                    }
                    @Html.TextBoxFor(model => model.ten, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a onclick="goBack()" class="btn btn-default">Quay lại</a>
                    <script>
                        function goBack() {
                          window.history.back();
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
}
