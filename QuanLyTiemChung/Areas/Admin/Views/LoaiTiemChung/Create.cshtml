@model Models.EF.LoaiTiemChung

@{
    ViewBag.Title = "Lưu loại tiêm chủng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save"></i>&nbsp;Lưu loại tiêm chủng
}

@using (Html.BeginForm("Create", "LoaiTiemChung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="form-group">
                <label class="control-label col-md-2">Tên loại tiêm chủng:</label>
                <div class="col-md-10">
                    @if (ViewBag.Update != true)
                    {
                        @Html.TextBoxFor(model => model.id, new { @class = "form-control hide" });
                    }
                    @Html.TextBoxFor(model => model.ten, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    @Html.ActionLink("Quay lại", "Index", new { controller = "LoaiTiemChung" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}
