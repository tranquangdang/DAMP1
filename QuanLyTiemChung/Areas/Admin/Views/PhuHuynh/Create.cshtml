@model Models.EF.PhuHuynh

@{
    ViewBag.Title = "Lưu phụ huynh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save"></i>&nbsp;Lưu phụ huynh
}

@using (Html.BeginForm("Create", "PhuHuynh", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="form-group">
                <label class="control-label col-md-2">Họ và tên:</label>
                <div class="col-md-10">
                    @if (ViewBag.Update != true)
                    {
                        @Html.HiddenFor(model => model.id, new { @class = "form-control" });
                    }
                    @Html.TextBoxFor(model => model.ten, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số điện thoại:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.sdt, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số CMND:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.cmnd, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cmnd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Tài khoản:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.taiKhoan, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.taiKhoan, "", new { @class = "text-danger", })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Mật khẩu:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.matKhau, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger", })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    @Html.ActionLink("Quay lại", "Index", new { controller = "PhuHuynh" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}
